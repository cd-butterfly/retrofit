<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ScrollView
            android:layout_width="match_parent"
            android:background="#F3F3F3"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:text="请求地址:"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/detail_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="1px"/>

            <TextView
                    android:layout_width="match_parent"
                    android:text="请求方法:"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/detail_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="1px"/>

            <TextView
                    android:layout_width="match_parent"
                    android:text="请求状态码:"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/detail_status_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="1px"/>

            <TextView
                    android:layout_width="match_parent"
                    android:text="请求时间:"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/detail_timestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="1px"/>

            <TextView
                    android:layout_width="match_parent"
                    android:text="请求Header:"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/detail_request_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="1px"/>

            <LinearLayout
                    android:id="@+id/detail_request_body_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="match_parent"
                        android:text="请求参数:"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/detail_request_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                <View
                        android:layout_width="match_parent"
                        android:background="#000000"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_height="1px"/>
            </LinearLayout>


            <TextView
                    android:layout_width="match_parent"
                    android:text="请求返回:"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/detail_response_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


    </ScrollView>


</LinearLayout>